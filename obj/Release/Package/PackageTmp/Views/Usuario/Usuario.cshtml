
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Usuario
<!--
    USUARIO
    ADMIN = S/N
    NOMBRE
    DEPTO = NULL
    ID_VENDEDOR = 0
    PASSWORD
-->

<script>

    function Login()
    {
        User = $("input:text[name=User]").val();
        Admin = $("#selectAdmin").val();
        Nombre = $("input:text[name=Nombre]").val();
        Depto = null;
        Id_vendedor = 0;
        Password = $("input:password[name=Password]").val();
        console.log(Password);

        $.ajax({
            async: false,
            type: "POST",
            dataType: "text",
            contentType: "application/x-www-form-urlencoded",
            url: "/Usuario/Create",
            data: { User, Admin, Nombre, Depto, Id_vendedor, Password },
            success: function (response) {

                if (response = "false") {
                    window.location = "@Url.Action("Usuario","Usuario")";
                }
                else if (response = "true") {
                    alert(response);
                    return;
                }
                else {
                    alert(response)
                    return;
                }
            },
            error: function () {
                alert("Ocurrio un Error");
            }
        });
    }

    function EliminarUsuario(usuario) {

        var id = arguments[0];
        let seElimina = confirm("¿Seguro que desea eliminar el usuario?");

        if (seElimina == true) {

            console.log(id);
            var url = '/Usuario/Eliminar/';
            var data = { id };

            $.ajax({
                async: false,
                type: "POST",
                dataType: "text",
                contentType: "application/x-www-form-urlencoded",
                url: url,
                data: data,
                success: function (response) {
                    window.location = "@Url.Action("Usuario","Usuario")";
                },
                error: function () {
                    alert("Ocurrio un error al eliminar");
                }
            });


        }
        if (seElimina == false) {
            alert("No se eliminara");
        }
    }
</script>

