    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Listado de Usuarios
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    @Html.Raw(ViewBag.Tabla)
                </div>
            </div>
        </div>
    </div>
</div>


