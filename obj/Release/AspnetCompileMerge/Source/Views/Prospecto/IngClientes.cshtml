
@{
    ViewBag.Title = "IngClientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model DatosIngresoProspectos


<script src="~/js/eqfuncs.js"></script>
<div class="row">
    <div class="col-xl-6">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Ingreso Cliente
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">

                    <form role="form" action="/Prospecto/IngCliente" method="post">


                        <div class="form-group row">
                            <label>Nit</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="nit" name="oportunidades.nit" onchange="BuscarNit();">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" data-toggle="modal" onclick="BuscarNit();">Buscar Nit</button>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label>Nombre Cliente</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="cliente" name="oportunidades.nombre_prospecto">
                            </div>
                        </div>


                        <div class="form-group row">
                            <label>Direccion</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="direccion" name="oportunidades.direccion">
                            </div>
                        </div>


                        <div class="form-group row">
                            <label>Vendedor</label>
                            <div class="input-group">
                                @Html.DropDownListFor(m => m.oportunidades.id_vendedor, ViewData["asesores"] as List<SelectListItem>, "Selecccionar Vendedor...", new { @class = "form-control" })


                            </div>
                        </div>

                        <div class="form-group row">
                            <label>Tipo Cliente</label>
                            <div class="input-group">
                                @Html.DropDownListFor(m => m.oportunidades.tipo, ViewData["tipoclie"] as List<SelectListItem>, "Seleccionar Tipo Cliente...", new { @class = "form-control" })


                            </div>
                        </div>


                        <div class="form-group row">
                            <label>Contacto</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="oportunidades.nombre_contacto">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label>Telefono</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="oportunidades.telefono">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label>Días de Credito</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="oportunidades.dias">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label>Límite de Credito</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="oportunidades.limite">
                            </div>
                        </div>


                        <div class="form-group row">
                            <label>Email</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="oportunidades.email">
                            </div>
                        </div>


</div>

                <div class="form-group row">
                    <label>Observaciones</label>
                    <textarea class="form-control" rows="3" name="oportunidades.observaciones"></textarea>
                </div>
                <button type="submit" class="btn btn-info btn-block">Guardar Cliente</button>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>




@*CONTACTO PRINCIPAL*@
<div class="modal fade default-example-modal-right" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-right">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title h4">AGREGAR CONTACTO PRINCIPAL EMPRESA</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>

            <div class="modal-body">
                <div class="modal-body">
                    <div class="card mb-5">
                        <div class="card-body p-3">
                            <form role="form" action="/Prospecto/IngProspectoCliente" method="post">



                                <div class="form-group">
                                    <label>Nombre</label>
                                    <input class="form-control" type="text" name="prospecto.nombre" />
                                </div>



                                <label>Vendedor</label>
                                <div class="input-group">
                                    @Html.DropDownListFor(m => m.prospecto.id_vendedor, ViewData["asesores"] as List<SelectListItem>, "Selecccionar asesor...", new { @class = "form-control" })

                                </div>

                                <label>Tipo</label>
                                <div class="input-group">
                                    @Html.DropDownListFor(m => m.prospecto.id_tipo, ViewData["tipoclie"] as List<SelectListItem>, "Selecccionar Contacto Empresa...", new { @class = "form-control" })

                                </div>

                                <div class="form-group">
                                    <label>Direccion</label>
                                    @* <textarea class="form-control" rows="3"></textarea>*@
                                    <textarea class="form-control" rows="3" name="prospecto.direccion"></textarea>
                                </div>

                                <div class="form-group">
                                    <label>Telefono</label>
                                    <input class="form-control" type="text" name="prospecto.telefono" />
                                </div>
                                <div class="form-group">
                                    <label>Celular</label>
                                    <input class="form-control" type="text" name="prospecto.celular" />
                                </div>

                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" type="text" name="prospecto.email" />
                                </div>

                                <div class="form-group">
                                    <label>WebPage</label>
                                    <input class="form-control" type="text" name="prospecto.web_page" />
                                </div>

                                @*<button type="submit" class="btn btn-info btn-block">Ingresar Contacto Principal</button>*@
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade modal-backdrop-transparent" id="ModalError" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mensaje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" id="Error">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

