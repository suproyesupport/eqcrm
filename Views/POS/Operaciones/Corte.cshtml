                        dataField: "CAJA",
                        alignment: "left",
                        width: 195,
                        allowFiltering: true,
                        allowSorting: false,

                    },
                    {
                        dataField: "FECHACAJA",
                        alignment: "left",
                        width: 195,
                        allowFiltering: true,
                        allowSorting: false,

                    },

                    {
                        dataField: "EFECTIVOCONTADO",
                        alignment: "left",
                        width: 195,
                        allowFiltering: true,
                        allowSorting: false,

                    },
                    {
                        dataField: "TARJETACONTADO",
                        alignment: "left",
                        width: 195,
                        allowFiltering: false,
                        allowSorting: false,

                    },
