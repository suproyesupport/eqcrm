        var fecha2 = null;

        fecha1 = $("#fecha1").val();
        fecha2 = $("#fecha2").val();
        var id_caja = document.getElementById("Nombre").value;

        console.log("Fecha 1: " + fecha1);
        console.log("Fecha 2: " + fecha2);

