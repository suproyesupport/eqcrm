                            enabled: true,
                            fileName: "ConsultaCorteCaja",
                            allowExportSelectedData: true
                        },
                        rowAlternationEnabled: true,
                        allowColumnReordering: true,
                        allowColumnResizing: true,
                        //columnHidingEnabled: true,   
                        focusedRowEnabled: true,
                        showBorders: true,
                        columnChooser: {
                            enabled: true
                        },
                        columnFixing: {
                            enabled: true
                        },
