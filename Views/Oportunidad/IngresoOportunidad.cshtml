@{
    ViewData["Title"] = "IngresoOportunidad";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model DatosIngresoProspectos
<div class="row">
    <div class="col-xl-6">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Ingreso Oportunidad
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">

                    <form role="form" action="/Oportunidad/IngresoOportunidad" method="post">

                        <div class="form-group row">
                            <label>Fecha</label>

                            <div class="input-group">
                                <input type="date" class="form-control" name="oportunidades.fecha" placeholder="Seleccione Fecha">
                                <div class="input-group-append">
                                    <span class="input-group-text fs-xl">
                                        <i class="fal fa-calendar"></i>
                                    </span>
                                </div>

                            </div>
                        </div>


                        <div class="form-group row">
                            <label>Oportunidad</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="oportunidades.oportunidad">
                            </div>
                        </div>



                        <div class="form-group row">
                            <label>Valor Monetario</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Q</span>
                                </div>
                                <input type="text" class="form-control" name="oportunidades.precio">
                                <div class="input-group-append">
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label>Fecha Cierre</label>

                            <div class="input-group">
                                <input type="date" class="form-control" name="oportunidades.fecha_cierre" placeholder="Seleccione Fecha">
                                <div class="input-group-append">
                                    <span class="input-group-text fs-xl">
                                        <i class="fal fa-calendar"></i>
                                    </span>
                                </div>

                            </div>
                        </div>

                        <div class="form-group row">
                            <label>Vendedor</label>
                            <div class="input-group">
                                @Html.DropDownListFor(m => m.oportunidades.id_vendedor, ViewData["asesores2"] as List<SelectListItem>, "Selecccionar asesor...", new { @class = "form-control" })
                            </div>
                        </div>

                        

                        <div class="form-group row">
                            <label>Contacto Empresa Principal</label>
                            <div class="input-group">
                                @Html.DropDownListFor(m => m.oportunidades.id_prospecto, ViewData["contacto1"] as List<SelectListItem>, "Selecccionar Contacto Empresa...", new { @class = "form-control" })

                                <span class="input-group-btn">
                                    @*<button class="btn btn-default" type="button" data-toggle="modal" data-target=".bs-example-modal-sm">Agregar</button>*@
                                    @*<button type="button" class="btn btn-default" data-toggle="modal" data-target=".default-example-modal-right-lg">Agregar</button>*@
                                    <button type="button" class="btn btn-default" data-toggle="modal" data-target=".default-example-modal-right">Agregar</button>

                                </span>
                            </div>
                        </div>



                        <div class="form-group row">
                            <label>Contacto Secundario</label>
                            <div class="input-group">
                                @Html.DropDownListFor(m => m.oportunidades.id_contacto, ViewData["contacto2"] as List<SelectListItem>, "Selecccionar Contacto...", new { @class = "form-control" })

                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" data-toggle="modal" data-target=".default-example-modal-right2">Agregar</button>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label>Observaciones</label>
                            <textarea class="form-control" rows="3" name="oportunidades.observaciones"></textarea>
                        </div>
                        <button type="submit" class="btn btn-info btn-block">Ingresar Datos</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@*CONTACTO PRINCIPAL*@
<div class="modal fade default-example-modal-right" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-right">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title h4">AGREGAR CONTACTO PRINCIPAL EMPRESA</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>

            <div class="modal-body">
                <div class="modal-body">
                    <div class="card mb-5">
                        <div class="card-body p-3">
                            <form role="form" action="/Oportunidad/IngresoProspecto" method="post">
                                <div class="form-group">
                                    <label>Nombre</label>
                                    <input class="form-control" type="text" name="prospecto.nombre" />
                                </div>

                                <label>Vendedor</label>
                                <div class="input-group">
                                    @Html.DropDownListFor(m => m.prospecto.id_vendedor, ViewData["asesores"] as List<SelectListItem>, "Selecccionar asesor...", new { @class = "form-control" })

                                </div>

                                <label>Tipo</label>
                                <div class="input-group">
                                    @Html.DropDownListFor(m => m.prospecto.id_tipo, ViewData["tipoclie"] as List<SelectListItem>, "Selecccionar Contacto Empresa...", new { @class = "form-control" })

                                </div>
                                <div class="form-group">
                                    <label>Direccion</label>
                                    @* <textarea class="form-control" rows="3"></textarea>*@
                                    <textarea class="form-control" rows="3" name="prospecto.direccion"></textarea>
                                </div>

                                <div class="form-group">
                                    <label>Telefono</label>
                                    <input class="form-control" type="text" name="prospecto.telefono" />
                                </div>
                                <div class="form-group">
                                    <label>Celular</label>
                                    <input class="form-control" type="text" name="prospecto.celular" />
                                </div>

                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" type="text" name="prospecto.email" />
                                </div>

                                <div class="form-group">
                                    <label>WebPage</label>
                                    <input class="form-control" type="text" name="prospecto.web_page" />
                                </div>

                                @*<button type="submit" class="btn btn-info btn-block">Ingresar Contacto Principal</button>*@
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                </div>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>        
    </div>
 </div>


